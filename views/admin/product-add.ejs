<%- include('./layouts/header.ejs') %>
<%- include('./layouts/menu.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6">
                <% if (typeof(errs) !='undefined' ) { %>
                    <% errs.forEach(element=> { %>
                        <div class="alert alert-danger" role="alert">
                            <strong>
                                <%= element.message%>
                            </strong>
                        </div>
                    <% }) %>      
                <% } %>
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên</label>
                        <input type="text" class="form-control" name="ten_sp"
                           aria-describedby="emailHelp" placeholder="Enter Name">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ảnh</label>
                        <input type="file" class="form-control" name="image"
                           aria-describedby="emailHelp">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá Sp</label>
                        <input type="text" class="form-control" name="gia_sp"
                           aria-describedby="emailHelp" placeholder="Enter Price">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Giá KM</label>
                        <input type="text" class="form-control" name="gia_km"
                           aria-describedby="emailHelp" placeholder="Enter Sale">
                    </div>
                    <div class="form-group">
                      <label for="ma_danh_muc">Danh Mục</label>
                      <select class="form-control" name="ma_danh_muc" id="ma_danh_muc">
                        <% categories.forEach((item, index) => { %>
                            <option value="<%= item.id %>"><%= item.id %> - <%= item.ten_danh_muc %> </option>
                        <% }) %>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                </div>

            </div>
        </div>
<%- include('./layouts/footer.ejs') %>